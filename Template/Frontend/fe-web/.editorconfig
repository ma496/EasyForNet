# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.{js,jsx,ts,tsx,vue}]
indent_size = 2
max_line_length = 100

[*.{css,scss,less}]
indent_size = 2

[*.{html}]
indent_size = 2

[*.{cs,csproj,py,java}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[Makefile]
indent_style = tab
